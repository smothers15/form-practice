extends layout

block content
  h1 My Form
  p Test the options and see how they affect the resulting card.
  //form(action="/results" method="post")
    label(for="description") Description:
    br
    textarea(id = "description" name = "description" cols=40 rows=5)
    br
    label(for="agree") Agree?
    input(type="checkbox" name="agree" id = "agree" value = "agree")
    br
    input(type="radio" name="icecream" id="chocolate" value="chocolate")
    label(for="chocolate") Chocolate

    input(type="radio" name="icecream" id="strawberry" value="strawberry" checked)
    label(for="strawberry") Strawberry

    input(type="radio" name="icecream" id="vanilla" value="vanilla")
    label(for="vanilla") Vanilla

    input(type="radio" name="iceCreamOther" id="other" value="noneOfThose")
    label(for="other") Other
    br
    button(type="submit") Submit This
  form(action="/results" method="post")
    h4 Background Colors
    input(type="radio" name="colors" id="red" value="red")
    label(for="red") Red

    input(type="radio" name="colors" id="green" value="green")
    label(for="green") Green

    input(type="radio" name="colors" id="blue" value="blue")
    label(for="blue") Blue

    input(type="radio" name="colors" id="yellow" value="yellow")
    label(for="yellow") Yellow

    input(type="radio" name="colors" id="orange" value="orange")
    label(for="orange") Orange
    br
    h4 Card Width
    input(type="radio" name="size" id="one" value="one")
    label(for="one") 100px

    input(type="radio" name="size" id="two" value="two")
    label(for="two") 200px

    input(type="radio" name="size" id="three" value="three")
    label(for="three") 300px

    input(type="radio" name="size" id="five" value="five")
    label(for="five") 500px
    br
    h4 Text Color
    input(type="radio" name="textColor" id="black" value="black")
    label(for="black") Black

    input(type="radio" name="textColor" id="white" value="white")
    label(for="white") White
    br
    br
    label(for="underlined") Underlined
    input(type="checkbox" name="underlined" id = "underlined" value = "underlined")
    br
    br
    label(for="border") Border Color
    br
    select(name="border" id="border")
      option(value="black") Black
      option(value="blue") Blue
      option(value="red") Red
      option(value="purple") Purple
    br
    label(for="borderWidth") Border Width
      br
      select(name="borderWidth" id="borderWidth")
        option(value="1") 1px
        option(value="2") 2px
        option(value="3") 3px
        option(value="4") 4px
    p
    label(for="textInput") Type Something:
    br

    textarea(id = "textInput" name = "textInput" cols=40 rows=5)
    br
    button(type="submit" method="post") Submit
